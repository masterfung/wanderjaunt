extends layout

block content
  br
  h2 Import CSV file using NodeJS and MongoDB
  br
  p
   a(href='javascript:void(0)' class='btn btn-primary' id='importData') Import CSV
   | &nbsp;&nbsp;&nbsp;
   a(href='javascript:void(0)' class='btn btn-primary' id='fetchInventory') Fetch Inventory
  br
  p#message.alert.alert-success(style='display:none')
  br
  table.table.table-bordered
    thead
        tr
            th #
            th Inventory ID
            th Category
            th Sub Category
            th Budget
            th Name
            th Description
            th Brand
            th Unit Cost
            th Qty
    tbody#trdata
        tr
            td(colspan='3') Click on <strong>Import CSV</strong> button to import and save data to MongoDB. <br />Click on <strong>Fetch Inventory</strong> button to display data from database
